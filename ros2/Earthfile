    ARG ROS_DISTRO
    FROM --pass-args +ros-base
    DO apt+INSTALL --packages=ros-${ROS_DISTRO}-simulation
    SAVE IMAGE localhost/ros-intermediate:${ROS_DISTRO}-simulation


